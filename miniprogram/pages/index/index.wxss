.container {
  width: 100%;
  height: 1070rpx;
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color:	rgb(239,239,244);
}

.container .up {
  justify-content: center;
  text-align: center;
}
.container .up .img {
  margin-top: 10rpx;
  height: 500rpx;

}
.up .text {
  text-align: center;
  justify-content: center;
  font-size: 100rpx;
  color: rgb(92, 23, 184);
